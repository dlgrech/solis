<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.TextAppearance.Solis" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/saira_semicondensed_400</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextAppearance.Solis.Hero" parent="Base.TextAppearance.Solis">
        <item name="android:textSize">64sp</item>
        <item name="android:lastBaselineToBottomHeight" tools:ignore="NewApi">0dp</item>
        <item name="android:firstBaselineToTopHeight" tools:ignore="NewApi">0dp</item>
        <item name="fontFamily">@font/saira_semicondensed_700</item>
    </style>

    <style name="TextAppearance.Solis.Title1" parent="Base.TextAppearance.Solis">
        <item name="android:textSize">32sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="fontFamily">@font/saira_semicondensed_700</item>
    </style>

    <style name="TextAppearance.Solis.Title2" parent="Base.TextAppearance.Solis">
        <item name="android:textSize">28sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="fontFamily">@font/saira_semicondensed_700</item>
    </style>

    <style name="TextAppearance.Solis.Title3" parent="Base.TextAppearance.Solis">
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="fontFamily">@font/saira_semicondensed_600</item>
    </style>

    <style name="TextAppearance.Solis.Title4" parent="Base.TextAppearance.Solis">
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="fontFamily">@font/saira_semicondensed_600</item>
    </style>

    <style name="TextAppearance.Solis.Label1" parent="Base.TextAppearance.Solis">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Solis.Label2" parent="Base.TextAppearance.Solis">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/saira_semicondensed_600</item>
    </style>

    <style name="TextAppearance.Solis.Label3" parent="Base.TextAppearance.Solis">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/saira_semicondensed_700</item>
    </style>

    <style name="TextAppearance.Solis.Label4" parent="Base.TextAppearance.Solis">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Solis.Label5" parent="Base.TextAppearance.Solis">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.SolisCollapsingToolbar.Expanded" parent="TextAppearance.Solis.Title1">
        <item name="fontFamily">@font/saira_semicondensed_600</item>
    </style>

    <style name="TextAppearance.SolisCollapsingToolbar.Collapsed" parent="TextAppearance.Solis.Title3" />

